<Page x:Class="LaboratoryApp.src.Modules.Chemistry.ReactionFunction.Views.ReactionManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaboratoryApp.src.Modules.Chemistry.ReactionFunction.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="13"
      TextOptions.TextFormattingMode="Ideal"
      TextOptions.TextRenderingMode="Auto"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reaction">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" 
                    Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search bar -->
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0"
                            BorderBrush="Black"
                            BorderThickness="1"
                            CornerRadius="10"
                            Margin="5">
                        <TextBox Name="Reactants"
                                 Text="{Binding Reactants, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Chất tham gia"
                                 VerticalAlignment="Center"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Foreground="Black"
                                 CaretBrush="Black"
                                 BorderBrush="Transparent"
                                 Margin="0">
                        </TextBox>
                    </Border>

                    <materialDesign:PackIcon Kind="ArrowRightThin"
                                             Grid.Column="1"
                                             Height="30"
                                             Width="30"
                                             Margin="5,0"
                                             VerticalAlignment="Center"/>

                    <Border Grid.Column="2"
                            BorderBrush="Black"
                            BorderThickness="1"
                            CornerRadius="10"
                            Margin="5">
                        <TextBox Name="Products"
                                 Text="{Binding Products, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Chất sản phẩm"
                                 VerticalAlignment="Center"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Foreground="Black"
                                 CaretBrush="Black"
                                 BorderBrush="Transparent"
                                 Margin="0">
                        </TextBox>
                    </Border>
                </Grid>

                <!-- Add reaction button -->
                <Button Grid.Column="1"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        BorderThickness="0"
                        Background="Wheat"
                        Margin="5"
                        Height="Auto"
                        Width="Auto"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Command="{Binding SearchReactionCommand}">
                    <Grid VerticalAlignment="Center"
                          HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="Magnify"
                                                 Grid.Column="0"
                                                 Width="20"
                                                 Height="20"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1"
                                   Text="Tìm kiếm"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Button>
            </Grid>

            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                    BorderThickness="0"
                    Background="SpringGreen"
                    Margin="5"
                    Height="30"
                    Width="200"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    Command="{Binding AddReactionCommand}">
                <Grid VerticalAlignment="Center"
                      HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon Kind="Add"
                                             Grid.Column="0"
                                             Width="20"
                                             Height="20"
                                             VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1"
                               Text="Thêm phản ứng"
                               Margin="5,0,0,0"
                               VerticalAlignment="Center"/>
                </Grid>
            </Button>

            <Separator Width="200"
                       Height="1"
                       Background="Gray"
                       BorderBrush="Gray"/>

            <ScrollViewer VerticalScrollBarVisibility="Hidden"
                          Margin="10,5"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Stretch">
                <ItemsControl ItemsSource="{Binding Reactions}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Background="Transparent"
                                    Cursor="Hand"
                                    BorderThickness="1"
                                    BorderBrush="DarkGray"
                                    materialDesign:ButtonAssist.CornerRadius="10"
                                    Margin="5"
                                    Height="50"
                                    HorizontalContentAlignment="Stretch"
                                    Command="{Binding DataContext.SelectReactionCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
                                    CommandParameter="{Binding .}">
                                <local:ReactionSearchResultUC/>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Page>
