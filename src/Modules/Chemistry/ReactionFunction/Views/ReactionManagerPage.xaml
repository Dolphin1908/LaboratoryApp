<Page x:Class="LaboratoryApp.src.Modules.Chemistry.ReactionFunction.Views.ReactionManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaboratoryApp.src.Modules.Chemistry.ReactionFunction.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="13"
      TextOptions.TextFormattingMode="Ideal"
      TextOptions.TextRenderingMode="Auto"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reaction">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" 
                    Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        BorderThickness="1"
                        BorderBrush="Black"
                        CornerRadius="10"
                        Margin="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Kind="Magnify" 
                                                 Grid.Column="0"
                                                 Height="20"
                                                 Width="20"
                                                 Margin="5,0"
                                                 VerticalAlignment="Center"/>

                        <Grid Grid.Column="1">
                            <TextBox Name="SearchBox"
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     VerticalAlignment="Center"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Foreground="Black"
                                     CaretBrush="Black"
                                     Style="{x:Null}"
                                     BorderBrush="Transparent"
                                     Margin="0">
                            </TextBox>

                            <Popup Name="SearchPopup"
                                   PlacementTarget="{Binding ElementName=SearchBox}"
                                   Placement="Bottom"
                                   StaysOpen="False"
                                   IsOpen="{Binding SearchResultDTOs.Count, Mode=OneWay}"
                                   Margin="0"
                                   VerticalOffset="5"
                                   AllowsTransparency="True"
                                   PopupAnimation="Fade"
                                   Width="{Binding ActualWidth, ElementName=SearchBox}">

                                <ScrollViewer VerticalScrollBarVisibility="Hidden"
                                              Margin="0"
                                              MaxHeight="400">
                                    <ItemsControl ItemsSource="{Binding SearchResultDTOs}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Background="LightGray"
                                                        Cursor="Hand"
                                                        BorderThickness="0"
                                                        Padding="5,0"
                                                        Margin="0"
                                                        HorizontalAlignment="Stretch"
                                                        HorizontalContentAlignment="Left"
                                                        Height="60"
                                                        Command="{Binding DataContext.SelectResultCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
                                                        CommandParameter="{Binding .}">
                                                    <TextBlock HorizontalAlignment="Left"/>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Popup>
                        </Grid>
                    </Grid>
                </Border>

                <Button Grid.Column="1"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        BorderThickness="0"
                        Background="SpringGreen"
                        Margin="5"
                        Height="Auto"
                        Width="Auto"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Command="{Binding AddReactionCommand}">
                    <Grid VerticalAlignment="Center"
                          HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="Add"
                                                 Grid.Column="0"
                                                 Width="20"
                                                 Height="20"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1"
                                   Text="Thêm phản ứng"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Button>
            </Grid>

            <Separator Width="200"
                       Height="1"
                       Background="Gray"
                       BorderBrush="Gray"/>
        </StackPanel>
    </Grid>
</Page>
