<Window x:Class="LaboratoryApp.src.Modules.Chemistry.ReactionFunction.Views.ReactionSelectionResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaboratoryApp.src.Modules.Chemistry.ReactionFunction.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        mc:Ignorable="d"
        Title="{Binding SelectedReaction.DisplayEquation}" 
        Height="600" Width="800"
        MinHeight="600" MinWidth="800">
    <Grid Margin="20,10,20,10">
        <ScrollViewer VerticalScrollBarVisibility="Hidden"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <TextBlock Text="{Binding SelectedReaction.DisplayEquation}"
                           Foreground="SlateBlue"
                           FontSize="32"
                           FontWeight="DemiBold"
                           Margin="0,0,0,10"/>

                <!-- Thông tin chung -->
                <Grid Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Thông tin phản ứng"
                               Foreground="DarkSlateBlue"
                               FontSize="24"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <StackPanel Grid.Row="1"
                                Margin="10,0,0,0">
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,10"
                                    Visibility="{Binding SelectedReaction.ReactionDate, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="Thời gian phát hiện: "
                                       FontSize="16"
                                       FontWeight="Bold"/>
                            <TextBlock Text="{Binding SelectedReaction.ReactionDate}"
                                       FontSize="16"
                                       Margin="0,0,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,10">
                            <TextBlock Text="Hiệu suất: "
                                       FontSize="16"
                                       FontWeight="Bold"/>
                            <TextBlock Text="{Binding SelectedReaction.YieldPercent}"
                                       FontSize="16"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="%"
                                       FontSize="16"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,10">
                            <TextBlock Text="Loại phản ứng: "
                                       FontSize="16"
                                       FontWeight="Bold"/>
                            <TextBlock Text="{Binding SelectedReaction.ReactionTypeDescription}"
                                       FontSize="16"
                                       Margin="0,0,5,0"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- Điều kiện phản ứng -->
                <Grid Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Điều kiện phản ứng"
                               Foreground="DarkSlateBlue"
                               FontSize="24"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <StackPanel Grid.Row="1"
                                Margin="10,0,0,0">
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,10"
                                    Visibility="{Binding SelectedReaction.Condition.Temperature, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="Nhiệt độ: "
                                       FontSize="16"
                                       FontWeight="Bold"/>
                            <TextBlock Text="{Binding SelectedReaction.Condition.Temperature}"
                                       FontSize="16"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="°C"
                                       FontSize="16"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,10"
                                    Visibility="{Binding SelectedReaction.Condition.Pressure, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="Áp suất: "
                                       FontSize="16"
                                       FontWeight="Bold"/>
                            <TextBlock Text="{Binding SelectedReaction.Condition.Pressure}"
                                       FontSize="16"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="atm"
                                       FontSize="16"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,10"
                                    Visibility="{Binding SelectedReaction.Condition.Catalyst, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="Chất xúc tác: "
                                       FontSize="16"
                                       FontWeight="Bold"/>
                            <TextBlock Text="{Binding SelectedReaction.Condition.Catalyst}"
                                       FontSize="16"
                                       Margin="0,0,5,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,10"
                                    Visibility="{Binding SelectedReaction.Condition.Solvent, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="Dung môi: "
                                       FontSize="16"
                                       FontWeight="Bold"/>
                            <TextBlock Text="{Binding SelectedReaction.Condition.Solvent}"
                                       FontSize="16"
                                       Margin="0,0,5,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,10"
                                    Visibility="{Binding SelectedReaction.Condition.PH, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="Độ pH: "
                                       FontSize="16"
                                       FontWeight="Bold"/>
                            <TextBlock Text="{Binding SelectedReaction.Condition.PH}"
                                       FontSize="16"
                                       Margin="0,0,5,0"/>
                        </StackPanel>

                        <ItemsControl ItemsSource="{Binding SelectedReaction.Condition.OtherConditions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal"
                                                Margin="0,0,0,10">
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="16"
                                                   FontWeight="Bold"/>
                                        <TextBlock Text=": "
                                                   FontSize="16"
                                                   FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Description}"
                                                   FontSize="16"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Grid>

                <!-- Ghi chú phản ứng -->
                <Grid Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Ghi chú phản ứng"
                               Foreground="DarkSlateBlue"
                               FontSize="24"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <ItemsControl Grid.Row="1"
                                  ItemsSource="{Binding SelectedReaction.ReactionNotes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="10,0,0,5">
                                    <TextBlock Text="{Binding NoteType, Converter={StaticResource EnumDisplayNameConverter}}"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Margin="0,0,0,5"/>

                                    <ItemsControl ItemsSource="{Binding Content}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,0,0,5">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="•"
                                                               Grid.Column="0"
                                                               FontSize="16"
                                                               FontWeight="Bold"
                                                               Margin="10,0,0,0"/>

                                                    <TextBlock Text="{Binding}"
                                                               Grid.Column="1"
                                                               TextWrapping="WrapWithOverflow"
                                                               FontSize="16"
                                                               Margin="10,0,0,0"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>

                <Grid Margin="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Thông tin thêm"
                               Foreground="DarkSlateBlue"
                               FontSize="24"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <StackPanel Grid.Row="1"
                                Margin="10,0,0,0">
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,10"
                                    Visibility="{Binding SelectedReaction.ReactantDescription, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="Chất tham gia: "
                                       FontSize="16"
                                       FontWeight="Bold"/>
                            <TextBlock Text="{Binding SelectedReaction.ReactantDescription}"
                                       FontSize="16"
                                       Margin="0,0,5,0"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,10"
                                    Visibility="{Binding SelectedReaction.ProductDescription, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="Chất sản phẩm: "
                                       FontSize="16"
                                       FontWeight="Bold"/>
                            <TextBlock Text="{Binding SelectedReaction.ProductDescription}"
                                       FontSize="16"
                                       Margin="0,0,5,0"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
