<UserControl x:Class="LaboratoryApp.src.Modules.Chemistry.ReactionFunction.Views.ReactionSearchResultUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LaboratoryApp.src.Modules.Chemistry.ReactionFunction.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             FontFamily="{DynamicResource MaterialDesignFont}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" 
                   Text="{Binding DisplayEquation}"
                   Foreground="SlateBlue"
                   FontSize="20"
                   FontWeight="DemiBold" 
                   Margin="10,0"/>

        <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="10,0">
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="10,0"
                        Visibility="{Binding YieldPercent, Converter={StaticResource NullToVisibilityConverter}}">
                <TextBlock Text="{Binding YieldPercent}"
                           FontSize="16"/>
                <TextBlock Text=" %"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="10,0"
                        Visibility="{Binding Condition.Temperature, Converter={StaticResource NullToVisibilityConverter}}">
                <TextBlock Text="{Binding Condition.Temperature}"
                           Foreground="OrangeRed"
                           FontSize="16"/>
                <TextBlock Text=" °C"
                           Foreground="OrangeRed"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="10,0"
                        Visibility="{Binding Condition.Pressure, Converter={StaticResource NullToVisibilityConverter}}">
                <TextBlock Text="{Binding Condition.Pressure}"
                           Foreground="BlueViolet"
                           FontSize="16"/>
                <TextBlock Text=" atm"
                           Foreground="BlueViolet"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
