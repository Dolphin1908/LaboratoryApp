<Page x:Class="LaboratoryApp.src.Modules.Assignment.ExerciseFunction.Views.ExerciseManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaboratoryApp.src.Modules.Assignment.ExerciseFunction.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="13"
      TextOptions.TextFormattingMode="Ideal"
      TextOptions.TextRenderingMode="Auto"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      mc:Ignorable="d" 
      Title="Quản lý bài tập">

    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Danh sách bài tập -->
        <ScrollViewer Grid.Column="0"
                      VerticalScrollBarVisibility="Hidden">
            <ItemsControl ItemsSource="{Binding Exercises, UpdateSourceTrigger=PropertyChanged}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Background="Transparent"
                                BorderBrush="Black"
                                Margin="5"
                                Height="40"
                                Command="{Binding ., RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
                                CommandParameter="{Binding .}">
                            <Grid Width="650"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Title}"
                                           Grid.Column="0"
                                           FontWeight="Bold"
                                           Margin="5,0"/>
                                <TextBlock Text="{Binding Type, Converter={StaticResource EnumDisplayNameConverter}}"
                                           Grid.Column="1"
                                           Foreground="MediumPurple"
                                           Margin="5,0"/>
                                <TextBlock Text="{Binding Difficulty, Converter={StaticResource EnumDisplayNameConverter}}"
                                           Grid.Column="2"
                                           Foreground="MediumVioletRed"
                                           Margin="5,0"/>
                            </Grid>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Ngăn cách -->
        <Border Grid.Column="1"
                Width="1"
                Height="700"
                Margin="5,0"
                BorderThickness="1"
                BorderBrush="Black"/>

        <!-- Thông tin set -->
        <Grid Grid.Column="2"
              VerticalAlignment="Stretch"
              HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row ="0"
                          VerticalScrollBarVisibility="Hidden">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding SelectedExerciseSet.Title}"
                           FontSize="20"
                           TextAlignment="Center"
                           FontWeight="Bold"/>

                    <TextBlock Text="{Binding SelectedExerciseSet.OwnerInfo.Username}"
                           FontStyle="Italic"
                           FontWeight="Bold"
                           TextAlignment="Center"
                           Foreground="#acacff"
                           Margin="0,10"/>

                    <TextBlock Text="{Binding SelectedExerciseSet.Description}"
                           TextWrapping="Wrap"
                           TextAlignment="Justify"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row ="1"
                        Margin="0,10,0,0">
                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="SpringGreen"
                        BorderThickness="0"
                        Width="150"
                        Height="32"
                        Margin="0,0,0,10"
                        Visibility="{Binding IsModifier, Converter={StaticResource BooleanToVisibilityConverter}}"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Command="{Binding AddExerciseCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}">
                    <Grid VerticalAlignment="Center"
                          HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Grid.Column="0"
                                                 Kind="Add"
                                                 Width="20"
                                                 Height="20"/>
                        <TextBlock Grid.Column="1"
                                   Text="Thêm bài tập"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Button>

                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="Cyan"
                        BorderThickness="0"
                        Width="150"
                        Height="32"
                        Margin="0,0,0,10"
                        Visibility="{Binding IsOwner, Converter={StaticResource BooleanToVisibilityConverter}}"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Command="{Binding }"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}">
                    <Grid VerticalAlignment="Center"
                          HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Grid.Column="0"
                                                 Kind="Edit"
                                                 Width="16"
                                                 Height="16"/>
                        <TextBlock Grid.Column="1"
                                   Text="Sửa bộ"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Button>

                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="Red"
                        BorderThickness="0"
                        Width="150"
                        Height="32"
                        Margin="0,0,0,10"
                        Visibility="{Binding IsOwner, Converter={StaticResource BooleanToVisibilityConverter}}"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Command="{Binding }"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}">
                    <Grid VerticalAlignment="Center"
                          HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Grid.Column="0"
                                                 Kind="Delete"
                                                 Width="16"
                                                 Height="16"/>
                        <TextBlock Grid.Column="1"
                                   Text="Xóa bộ"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
