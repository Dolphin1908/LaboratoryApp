<Window x:Class="LaboratoryApp.src.Modules.Assignment.Exercise.Views.ExerciseManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaboratoryApp.src.Modules.Assignment.Exercise.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        mc:Ignorable="d" 
        Height="600" MaxHeight="800" MinHeight="400"
        Width="1000" MaxWidth="1200" MinWidth="800"
        Title="Quản lý bài tập">

    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Thông tin set -->
        <Grid Grid.Column="0"
              VerticalAlignment="Stretch"
              HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row ="0"
                          VerticalScrollBarVisibility="Hidden">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding SelectedExerciseSet.Title}"
                           FontSize="20"
                           TextAlignment="Center"
                           FontWeight="Bold"/>

                    <TextBlock Text="{Binding SelectedExerciseSet.OwnerInfo.Username}"
                           FontStyle="Italic"
                           FontWeight="Bold"
                           TextAlignment="Center"
                           Foreground="#acacff"
                           Margin="0,10"/>

                    <TextBlock Text="{Binding SelectedExerciseSet.Description}"
                           TextWrapping="Wrap"
                           TextAlignment="Justify"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row ="1"
                        Margin="0,10,0,0">
                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="SpringGreen"
                        BorderThickness="0"
                        Width="150"
                        Height="32"
                        Margin="0,0,0,10"
                        Visibility="{Binding IsAuthor, Converter={StaticResource BooleanToVisibilityConverter}}"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Command="{Binding }"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}">
                    <Grid VerticalAlignment="Center"
                          HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Grid.Column="0"
                                                 Kind="Add"
                                                 Width="20"
                                                 Height="20"/>
                        <TextBlock Grid.Column="1"
                                   Text="Thêm bài tập"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Button>

                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="Cyan"
                        BorderThickness="0"
                        Width="150"
                        Height="32"
                        Margin="0,0,0,10"
                        Visibility="{Binding IsAuthor, Converter={StaticResource BooleanToVisibilityConverter}}"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Command="{Binding }"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}">
                    <Grid VerticalAlignment="Center"
                          HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Grid.Column="0"
                                                 Kind="Edit"
                                                 Width="16"
                                                 Height="16"/>
                        <TextBlock Grid.Column="1"
                                   Text="Sửa bộ"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Button>

                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="Red"
                        BorderThickness="0"
                        Width="150"
                        Height="32"
                        Margin="0,0,0,10"
                        Visibility="{Binding IsAuthor, Converter={StaticResource BooleanToVisibilityConverter}}"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Command="{Binding }"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}">
                    <Grid VerticalAlignment="Center"
                          HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Grid.Column="0"
                                                 Kind="Delete"
                                                 Width="16"
                                                 Height="16"/>
                        <TextBlock Grid.Column="1"
                                   Text="Xóa bộ"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Button>
            </StackPanel>
        </Grid>

        <Border Grid.Column="1"
                Width="1"
                Height="700"
                Margin="5,0"
                BorderThickness="1"
                BorderBrush="Black"/>

        <!-- Danh sách bài tập -->
        <Grid Grid.Column="2">

        </Grid>
    </Grid>
</Window>
