<Window x:Class="LaboratoryApp.src.Modules.English.DiaryFunction.Views.DiaryDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaboratoryApp.src.Modules.English.DiaryFunction.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:helper="clr-namespace:LaboratoryApp.src.Core.Helpers"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        mc:Ignorable="d"
        Title="{Binding DiaryContent.Title}" 
        MinHeight="450" Height="450"
        MinWidth="800" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="{Binding DiaryContent.Title}"
                           FontSize="32"
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                <TextBlock Text="{Binding Author.Username}"
                           FontSize="14"
                           FontStyle="Italic"
                           Margin="0,0,0,5"/>
                <TextBlock Text="{Binding DiaryContent.CreatedAt}"
                           FontSize="12"
                           FontStyle="Italic"/>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="Cyan"
                        BorderThickness="0"
                        Width="80"
                        Height="32"
                        Margin="0,0,0,5"
                        Visibility="{Binding IsAuthor, Converter={StaticResource BooleanToVisibilityConverter}}"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Command="{Binding EditCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}">
                    <Grid VerticalAlignment="Center"
                          HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Grid.Column="0"
                                                 Kind="Edit"
                                                 Width="16"
                                                 Height="16"/>
                        <TextBlock Grid.Column="1"
                                   Text="Sửa"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Button>

                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="Red"
                        BorderThickness="0"
                        Width="80"
                        Height="32"
                        Margin="0,5,0,0"
                        Visibility="{Binding IsAuthor, Converter={StaticResource BooleanToVisibilityConverter}}"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Command="{Binding DeleteCommand}">
                    <Grid VerticalAlignment="Center"
                          HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Grid.Column="0"
                                                 Kind="Delete"
                                                 Width="16"
                                                 Height="16"/>
                        <TextBlock Grid.Column="1"
                                   Text="Xóa"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Button>
            </StackPanel>
            
        </Grid>

        <Separator Grid.Row="1"
                   Margin="0,5"
                   HorizontalAlignment="Stretch"
                   BorderBrush="Black"/>

        <RichTextBox Grid.Row="2"
                     BorderThickness="0"
                     VerticalContentAlignment="Top"
                     helper:RichTextBoxBindingHelper.BindableDocument="{Binding BoundDocument}"
                     Focusable="False"/>
    </Grid>
</Window>
