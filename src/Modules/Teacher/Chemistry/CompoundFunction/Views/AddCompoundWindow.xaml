<Window x:Class="LaboratoryApp.src.Modules.Teacher.Chemistry.CompoundFunction.Views.AddCompoundWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaboratoryApp.src.Modules.Teacher.Chemistry.CompoundFunction.Views"
        xmlns:domain="clr-namespace:LaboratoryApp.src.Core.Domains"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Height="600" 
        Width="1220"
        Title="Thêm hợp chất mới">

    <Grid HorizontalAlignment="Center"
          VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">

            <!-- Phần thông tin hợp chất -->
            <Grid Margin="10"
                  Width="220">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Thông tin hợp chất"
                           Grid.Row="0"
                           FontWeight="Bold"
                           FontSize="20"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Hidden">
                    <StackPanel HorizontalAlignment="Stretch">

                        <!-- Tên hợp chất -->
                        <TextBox VerticalAlignment="Top"
                                 materialDesign:HintAssist.Hint="Tên hợp chất"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,20">
                            <TextBox.Text>
                                <Binding Path="Compound.Name"
                                         UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <domain:NotEmptyValidationRule ValidatesOnTargetUpdated="True"/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>

                        <!-- Công thức hợp chất-->
                        <TextBox VerticalAlignment="Top"
                                 materialDesign:HintAssist.Hint="Công thức hợp chất"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,20">
                            <TextBox.Text>
                                <Binding Path="Compound.Formula"
                                         UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <domain:NotEmptyValidationRule ValidatesOnTargetUpdated="True"/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>

                        <!-- Khối lượng mol -->
                        <TextBox VerticalAlignment="Top"
                                 materialDesign:HintAssist.Hint="Khối lượng mol"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,20">
                            <TextBox.Text>
                                <Binding Path="Compound.MolecularMass"
                                         UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <domain:NotEmptyValidationRule ValidatesOnTargetUpdated="True"/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>

                        <!-- Màu hợp chất -->
                        <TextBox VerticalAlignment="Top"
                                 materialDesign:HintAssist.Hint="Màu hợp chất"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,20"
                                 Text="{Binding Compound.CompoundColor}"/>

                        <!-- Mã màu hợp chất -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                                     VerticalAlignment="Top"
                                     materialDesign:HintAssist.Hint="Mã màu (HEX) hợp chất (nếu có)"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Margin="0,0,10,0"
                                     Text="{Binding Compound.CompoundColorCode}"/>
                            <Border Grid.Column="1"
                                    Width="15" Height="50"
                                    Background="{Binding Compound.CompoundColorCode, Converter={StaticResource ColorToBrushConverter}, UpdateSourceTrigger=PropertyChanged}"
                                    CornerRadius="3"
                                    BorderThickness="1"
                                    BorderBrush="Black"/>
                        </Grid>

                        <!-- Loại hợp chất -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox VerticalAlignment="Top"
                                     materialDesign:HintAssist.Hint="Loại hợp chất"
                                     Focusable="False"
                                     IsReadOnly="True"
                                     Grid.Column="0"
                                     TextWrapping="WrapWithOverflow"
                                     Text="{Binding SelectedCompoundTypeNames, Mode=OneWay}"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                            <!-- Nút để mở popup -->
                            <ToggleButton Name="TypeToggle"
                                          Grid.Column="1"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Right"
                                          Margin="4,0,0,0"
                                          Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                          Content="▾"/>

                            <!-- Popup sẽ xuất hiện dưới ToggleButton -->
                            <Popup PlacementTarget="{Binding ElementName=TypeToggle}"
                                   Placement="Bottom"
                                   StaysOpen="False"
                                   AllowsTransparency="True"
                                   IsOpen="{Binding IsChecked, ElementName=TypeToggle}"
                                   PopupAnimation="Fade">
                                <Border Background="White"
                                        BorderBrush="Gray"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="8">
                                    <StackPanel>
                                        <ListView ItemsSource="{Binding CompoundTypeOptions}"
                                                  Width="250" 
                                                  Height="150"
                                                  materialDesign:ListBoxItemAssist.ShowSelection="False"
                                                  ScrollViewer.VerticalScrollBarVisibility="Hidden">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                                  VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding DisplayName}"
                                                                   Margin="8,0,0,0"
                                                                   VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </StackPanel>
                                </Border>
                            </Popup>
                        </Grid>

                        <!-- Trạng thái hợp chất -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox VerticalAlignment="Top"
                                     materialDesign:HintAssist.Hint="Trạng thái"
                                     Focusable="False"
                                     IsReadOnly="True"
                                     Grid.Column="0"
                                     TextWrapping="WrapWithOverflow"
                                     Text="{Binding SelectedPhaseNames, Mode=OneWay}"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                            <!-- Nút để mở popup -->
                            <ToggleButton Name="PhaseToggle"
                                          Grid.Column="1"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Right"
                                          Margin="4,0,0,0"
                                          Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                          Content="▾"/>

                            <!-- Popup sẽ xuất hiện dưới ToggleButton -->
                            <Popup PlacementTarget="{Binding ElementName=PhaseToggle}"
                                   Placement="Bottom"
                                   StaysOpen="False"
                                   AllowsTransparency="True"
                                   IsOpen="{Binding IsChecked, ElementName=PhaseToggle}"
                                   PopupAnimation="Fade">
                                <Border Background="White"
                                        BorderBrush="Gray"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="8">
                                    <StackPanel>
                                        <ListView ItemsSource="{Binding PhaseOptions}"
                                                  Width="250" 
                                                  Height="150"
                                                  materialDesign:ListBoxItemAssist.ShowSelection="False"
                                                  ScrollViewer.VerticalScrollBarVisibility="Hidden">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                                  VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding DisplayName}"
                                                                   Margin="8,0,0,0"
                                                                   VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </StackPanel>
                                </Border>
                            </Popup>
                        </Grid>

                        <!-- Khối lượng riêng -->
                        <TextBox VerticalAlignment="Top"
                                 materialDesign:HintAssist.Hint="Khối lượng riêng (g/cm³)"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,20"
                                 Text="{Binding Compound.Density}"/>

                        <!-- Mã số đăng ký -->
                        <TextBox VerticalAlignment="Top"
                                 materialDesign:HintAssist.Hint="Mã số đăng ký (CAS)"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,10"
                                 Text="{Binding Compound.CASNumber}"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <Border Width="1"
                    Height="500"
                    BorderThickness="1"
                    BorderBrush="Black"/>

            <!-- Phần Cấu tạo -->
            <Grid Margin="10" 
                  Width="220">
                <Grid.RowDefinitions>
                    <!-- Hàng Auto: tiêu đề + nút thêm -->
                    <RowDefinition Height="Auto"/>
                    <!-- Hàng *: phần cuộn -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header + Button cố định -->
                <StackPanel Grid.Row="0">
                    <TextBlock Text="Cấu tạo (Nguyên tố)"
                               FontWeight="Bold"
                               FontSize="20"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    <Button Content="Thêm nguyên tố"
                            Width="218"
                            Margin="0,0,0,10"
                            Background="SpringGreen"
                            Foreground="Black"
                            BorderThickness="0"
                            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource AncestorType=Window}}"
                            Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                            materialDesign:ButtonAssist.CornerRadius="15"
                            Command="{Binding AddElementCommand}"/>
                </StackPanel>

                <!-- Nội dung cuộn -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Hidden"
                              HorizontalContentAlignment="Center">
                    <ItemsControl ItemsSource="{Binding Composition}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" 
                                            Margin="0,0,0,10">
                                    <!-- Nội dung từng phần tử -->
                                    <TextBlock Text="{Binding SelectedElement.Formula}"
                                               FontSize="40"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,10"/>
                                    <StackPanel Orientation="Horizontal" 
                                                Margin="0,0,0,10">
                                        <ComboBox materialDesign:HintAssist.Hint="Nguyên tố"
                                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                  DisplayMemberPath="Name"
                                                  Width="120"
                                                  ItemsSource="{Binding DataContext.AllElements, RelativeSource={RelativeSource AncestorType=Window}}"
                                                  SelectedItem="{Binding SelectedElement, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBox Width="90"
                                                 Margin="5,0"
                                                 HorizontalContentAlignment="Center"
                                                 materialDesign:HintAssist.Hint="Số lượng"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                    <Button Content="Xóa"
                                            Foreground="Red"
                                            Command="{Binding DataContext.RemoveElementCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource MaterialDesignFlatButton}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <Border Width="1"
                    Height="500"
                    BorderThickness="1"
                    BorderBrush="Black"/>

            <!-- Phần Tính chất Vật lý -->
            <Grid Margin="10" 
                  Width="220">
                <Grid.RowDefinitions>
                    <!-- Hàng Auto: tiêu đề + nút thêm -->
                    <RowDefinition Height="Auto"/>
                    <!-- Hàng *: phần cuộn -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Text="Tính chất Vật lý"
                               FontWeight="Bold"
                               FontSize="20"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    <Button Content="Thêm tính chất" 
                            Width="218"
                            Margin="0,0,0,10"
                            Background="SpringGreen"
                            Foreground="Black"
                            BorderThickness="0"
                            Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                            materialDesign:ButtonAssist.CornerRadius="15"
                            Command="{Binding AddPhysicalPropertyCommand}"/>

                </StackPanel>
                <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Hidden"
                                  HorizontalContentAlignment="Center">
                    <ItemsControl ItemsSource="{Binding PhysicalProperties}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" 
                                            Margin="0,10">
                                    <TextBox Height="50"
                                             Text="{Binding PropertyName}"
                                             materialDesign:HintAssist.Hint="Tên tính chất"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             Margin="0,0,0,10"/>

                                    <StackPanel Orientation="Horizontal"
                                                Margin="0,0,0,10"
                                                HorizontalAlignment="Center">
                                        <TextBox Margin="0,0,10,0"
                                                 Width="100"
                                                 Text="{Binding Value}"
                                                 materialDesign:HintAssist.Hint="Giá trị"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                                        <ComboBox IsEditable="True"
                                                  Width="110"
                                                  materialDesign:HintAssist.Hint="Đơn vị"
                                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                  ItemsSource="{Binding DataContext.AllUnits, RelativeSource={RelativeSource AncestorType=Window}}"
                                                  Text="{Binding Unit, UpdateSourceTrigger=PropertyChanged}" 
                                                  ScrollViewer.VerticalScrollBarVisibility="Hidden"/>
                                    </StackPanel>

                                    <TextBox Height="Auto"
                                             Text="{Binding Description}"
                                             TextWrapping="Wrap"
                                             materialDesign:HintAssist.Hint="Mô tả"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             Margin="0,0,0,10"/>

                                    <Button Content="Xóa" 
                                            Foreground="Red"
                                            Command="{Binding DataContext.RemovePhysicalPropertyCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource MaterialDesignFlatButton}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <Border Width="1"
                    Height="500"
                    BorderThickness="1"
                    BorderBrush="Black"/>

            <!-- Phần Tính chất Hóa học -->
            <Grid Margin="10" 
                  Width="220">
                <Grid.RowDefinitions>
                    <!-- Hàng Auto: tiêu đề + nút thêm -->
                    <RowDefinition Height="Auto"/>
                    <!-- Hàng *: phần cuộn -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <TextBlock Text="Tính chất Hóa học"
                               FontWeight="Bold"
                               FontSize="20"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    <Button Content="Thêm tính chất" 
                            Width="218"
                            Margin="0,0,0,10"
                            Background="SpringGreen"
                            Foreground="Black"
                            BorderThickness="0"
                            Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                            materialDesign:ButtonAssist.CornerRadius="15"
                            Command="{Binding AddChemicalPropertyCommand}"/>

                </StackPanel>
                <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Hidden"
                                  HorizontalContentAlignment="Center">
                    <ItemsControl ItemsSource="{Binding ChemicalProperties}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" 
                                            Margin="0,10">
                                    <TextBox Height="50"
                                             Text="{Binding PropertyName}"
                                             materialDesign:HintAssist.Hint="Tên tính chất"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             Margin="0,0,0,10"/>

                                    <TextBox Height="Auto"
                                             Text="{Binding Description}"
                                             TextWrapping="Wrap"
                                             materialDesign:HintAssist.Hint="Mô tả"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             Margin="0,0,0,10"/>

                                    <Button Content="Xóa" 
                                            Foreground="Red"
                                            Command="{Binding DataContext.RemoveChemicalPropertyCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource MaterialDesignFlatButton}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <Border Width="1"
                    Height="500"
                    BorderThickness="1"
                    BorderBrush="Black"/>

            <!-- Phần Ghi chú -->
            <Grid Margin="10" 
                  Width="220">
                <Grid.RowDefinitions>
                    <!-- Hàng Auto: tiêu đề + nút thêm -->
                    <RowDefinition Height="Auto"/>
                    <!-- Hàng *: phần cuộn -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <TextBlock Text="Ghi chú"
                               FontWeight="Bold"
                               FontSize="20"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    <Button Content="Thêm nhóm ghi chú" 
                            Width="218"
                            Margin="0,0,0,10"
                            Background="SpringGreen"
                            Foreground="Black"
                            BorderThickness="0"
                            Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                            materialDesign:ButtonAssist.CornerRadius="15"
                            Command="{Binding AddNoteGroupCommand}"/>

                </StackPanel>
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Hidden"
                              HorizontalContentAlignment="Center">
                    <ItemsControl ItemsSource="{Binding Notes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" 
                                            Margin="0,10">
                                    <ComboBox IsEditable="False"
                                              materialDesign:HintAssist.Hint="Loại note"
                                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                              ItemsSource="{Binding NoteTypeOptions}"
                                              ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                              DisplayMemberPath="DisplayName"
                                              SelectedValuePath="Value"
                                              SelectedValue="{Binding CompoundNoteType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Margin="0,0,0,10"/>

                                    <!-- Danh sách nội dung cho từng loại -->
                                    <ItemsControl ItemsSource="{Binding CompoundNotes}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,0,0,10"
                                                      VerticalAlignment="Center">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBox Grid.Column="0"
                                                             Height="Auto"
                                                             Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             TextWrapping="Wrap"
                                                             materialDesign:HintAssist.Hint="Mô tả"
                                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                             Margin="0,0,5,0"/>
                                                    
                                                    <Button Grid.Column="1"
                                                            Height="Auto"
                                                            Content="Xóa"
                                                            Foreground="Red"
                                                            Command="{Binding DataContext.RemoveNoteCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource MaterialDesignFlatButton}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <Button Content="Thêm ghi chú" 
                                            Width="200"
                                            Margin="0,0,0,10"
                                            Background="SpringGreen"
                                            Foreground="Black"
                                            BorderThickness="0"
                                            Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                                            materialDesign:ButtonAssist.CornerRadius="15"
                                            Command="{Binding AddNoteCommand}"/>

                                    <Button Content="Xóa nhóm" 
                                            Foreground="Red"
                                            Command="{Binding DataContext.RemoveNoteGroupCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource MaterialDesignFlatButton}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

        </StackPanel>

        <!-- Nút Hoàn thành -->
        <Button Grid.Row="1" 
                Width="218"
                Margin="0,0,0,10"
                Content="Done"
                Background="Cyan"
                Foreground="Black"
                BorderThickness="0"
                Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                materialDesign:ButtonAssist.CornerRadius="15"
                Command="{Binding SaveCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
    </Grid>
</Window>
