<Window x:Class="LaboratoryApp.Views.Chemistry.CompoundFunction.SubWin.AddReactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaboratoryApp.Views.Chemistry.CompoundFunction.SubWin"
        xmlns:domain="clr-namespace:LaboratoryApp.Support.Domains"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Height="600" 
        Width="1220"
        Title="Thêm phản ứng mới">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <StackPanel HorizontalAlignment="Stretch"
                        Margin="10"
                        Width="220">
                <!-- Phần thông tin hợp chất -->
                <TextBlock Text="Thông tin phản ứng"
                           FontWeight="Bold"
                           FontSize="20"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>

                <TextBox VerticalAlignment="Top"
                         materialDesign:HintAssist.Hint="Tên hợp chất"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,20">
                    <TextBox.Text>
                        <Binding Path="Compound.Name"
                                 UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <domain:NotEmptyValidationRule ValidatesOnTargetUpdated="True"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>

                <TextBox VerticalAlignment="Top"
                         materialDesign:HintAssist.Hint="Công thức hợp chất"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,20">
                    <TextBox.Text>
                        <Binding Path="Compound.Formula"
                                 UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <domain:NotEmptyValidationRule ValidatesOnTargetUpdated="True"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>

                <TextBox VerticalAlignment="Top"
                         materialDesign:HintAssist.Hint="Khối lượng mol"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,20">
                    <TextBox.Text>
                        <Binding Path="Compound.MolecularMass"
                                 UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <domain:NotEmptyValidationRule ValidatesOnTargetUpdated="True"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>

                <TextBox VerticalAlignment="Top"
                         materialDesign:HintAssist.Hint="Màu hợp chất"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,20"
                         Text="{Binding Compound.CompoundColor}"/>

                <TextBox VerticalAlignment="Top"
                         materialDesign:HintAssist.Hint="Trạng thái"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,20"
                         Text="{Binding Compound.Phase}"/>

                <TextBox VerticalAlignment="Top"
                         materialDesign:HintAssist.Hint="Khối lượng riêng (g/cm³)"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,20"
                         Text="{Binding Compound.Density}"/>

                <TextBox VerticalAlignment="Top"
                         materialDesign:HintAssist.Hint="Mã số đăng ký (CAS)"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,10"
                         Text="{Binding Compound.CASNumber}"/>
            </StackPanel>

            <Separator HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Width="400"
                       Height="1">
                <Separator.LayoutTransform>
                    <RotateTransform Angle="90"/>
                </Separator.LayoutTransform>
            </Separator>

            <!-- Phần Cấu tạo -->
            <Grid Margin="10" 
                  Width="220">
                <Grid.RowDefinitions>
                    <!-- Hàng Auto: tiêu đề + nút thêm -->
                    <RowDefinition Height="Auto"/>
                    <!-- Hàng *: phần cuộn -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header + Button cố định -->
                <StackPanel Grid.Row="0">
                    <TextBlock Text="Cấu tạo (Nguyên tố)"
                               FontWeight="Bold"
                               FontSize="20"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    <Button Content="Thêm nguyên tố"
                            Width="218"
                            Margin="0,0,0,10"
                            Background="SpringGreen"
                            Foreground="Black"
                            BorderThickness="0"
                            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource AncestorType=Window}}"
                            Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            Command="{Binding AddElementCommand}"/>
                </StackPanel>

                <!-- Nội dung cuộn -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Hidden"
                              HorizontalContentAlignment="Center">
                    <ItemsControl ItemsSource="{Binding Composition}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" 
                                            Margin="0,0,0,10">
                                    <!-- Nội dung từng phần tử -->
                                    <TextBlock Text="{Binding Element.Symbol}"
                                               FontSize="40"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,10"/>
                                    <StackPanel Orientation="Horizontal" 
                                                Margin="0,0,0,10">
                                        <ComboBox materialDesign:HintAssist.Hint="Nguyên tố"
                                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                  DisplayMemberPath="Name"
                                                  Width="130"
                                                  ItemsSource="{Binding DataContext.AllElements, RelativeSource={RelativeSource AncestorType=Window}}"
                                                  SelectedItem="{Binding Element, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBox Width="80"
                                                 Margin="5,0"
                                                 HorizontalContentAlignment="Center"
                                                 materialDesign:HintAssist.Hint="Số lượng"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                    <Button Content="Xóa"
                                            Foreground="Red"
                                            Command="{Binding DataContext.RemoveElementCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource MaterialDesignFlatButton}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <Separator HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Width="400"
                       Height="1">
                <Separator.LayoutTransform>
                    <RotateTransform Angle="90"/>
                </Separator.LayoutTransform>
            </Separator>

            <!-- Phần Tính chất Vật lý -->
            <Grid Margin="10" 
                  Width="220">
                <Grid.RowDefinitions>
                    <!-- Hàng Auto: tiêu đề + nút thêm -->
                    <RowDefinition Height="Auto"/>
                    <!-- Hàng *: phần cuộn -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Text="Tính chất Vật lý"
                               FontWeight="Bold"
                               FontSize="20"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    <Button Content="Thêm tính chất" 
                                Width="218"
                                Margin="0,0,0,10"
                                Background="SpringGreen"
                                Foreground="Black"
                                BorderThickness="0"
                                Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                                materialDesign:ButtonAssist.CornerRadius="10"
                                Command="{Binding AddPhysicalPropertyCommand}"/>

                </StackPanel>
                <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Hidden"
                                  HorizontalContentAlignment="Center">
                    <ItemsControl ItemsSource="{Binding PhysicalProperties}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" 
                                            Margin="0,10">
                                    <TextBox Height="50"
                                             Text="{Binding PropertyName}"
                                             materialDesign:HintAssist.Hint="Tên tính chất"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             Margin="0,0,0,10"/>

                                    <StackPanel Orientation="Horizontal"
                                                Margin="0,0,0,10"
                                                HorizontalAlignment="Center">
                                        <TextBox Margin="0,0,10,0"
                                                 Width="110"
                                                 Text="{Binding Value}"
                                                 materialDesign:HintAssist.Hint="Giá trị"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                                        <ComboBox IsEditable="True"
                                                  Width="100"
                                                  materialDesign:HintAssist.Hint="Đơn vị"
                                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                  ItemsSource="{Binding DataContext.AllUnits, RelativeSource={RelativeSource AncestorType=Window}}"
                                                  Text="{Binding Unit, UpdateSourceTrigger=PropertyChanged}" 
                                                  ScrollViewer.VerticalScrollBarVisibility="Hidden"/>
                                    </StackPanel>

                                    <TextBox Height="Auto"
                                             Text="{Binding Description}"
                                             TextWrapping="Wrap"
                                             materialDesign:HintAssist.Hint="Mô tả"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             Margin="0,0,0,10"/>

                                    <Button Content="Xóa" 
                                            Foreground="Red"
                                            Command="{Binding DataContext.RemovePhysicalPropertyCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource MaterialDesignFlatButton}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <Separator HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Width="400"
                       Height="1">
                <Separator.LayoutTransform>
                    <RotateTransform Angle="90"/>
                </Separator.LayoutTransform>
            </Separator>

            <!-- Phần Tính chất Hóa học -->
            <Grid Margin="10" 
                  Width="220">
                <Grid.RowDefinitions>
                    <!-- Hàng Auto: tiêu đề + nút thêm -->
                    <RowDefinition Height="Auto"/>
                    <!-- Hàng *: phần cuộn -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <TextBlock Text="Tính chất Hóa học"
                               FontWeight="Bold"
                               FontSize="20"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    <Button Content="Thêm tính chất" 
                            Width="218"
                            Margin="0,0,0,10"
                            Background="SpringGreen"
                            Foreground="Black"
                            BorderThickness="0"
                            Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            Command="{Binding AddChemicalPropertyCommand}"/>

                </StackPanel>
                <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Hidden"
                                  HorizontalContentAlignment="Center">
                    <ItemsControl ItemsSource="{Binding ChemicalProperties}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" 
                                            Margin="0,10">
                                    <TextBox Height="50"
                                             Text="{Binding PropertyName}"
                                             materialDesign:HintAssist.Hint="Tên tính chất"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             Margin="0,0,0,10"/>

                                    <TextBox Height="Auto"
                                             Text="{Binding Description}"
                                             TextWrapping="Wrap"
                                             materialDesign:HintAssist.Hint="Mô tả"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             Margin="0,0,0,10"/>

                                    <Button Content="Xóa" 
                                            Foreground="Red"
                                            Command="{Binding DataContext.RemoveChemicalPropertyCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource MaterialDesignFlatButton}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <Separator HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Width="400"
                       Height="1">
                <Separator.LayoutTransform>
                    <RotateTransform Angle="90"/>
                </Separator.LayoutTransform>
            </Separator>

            <!-- Phần Ghi chú -->
            <Grid Margin="10" 
                  Width="220">
                <Grid.RowDefinitions>
                    <!-- Hàng Auto: tiêu đề + nút thêm -->
                    <RowDefinition Height="Auto"/>
                    <!-- Hàng *: phần cuộn -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <TextBlock Text="Ghi chú"
                               FontWeight="Bold"
                               FontSize="20"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    <Button Content="Thêm ghi chú" 
                            Width="218"
                            Margin="0,0,0,10"
                            Background="SpringGreen"
                            Foreground="Black"
                            BorderThickness="0"
                            Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            Command="{Binding AddNoteCommand}"/>

                </StackPanel>
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Hidden"
                              HorizontalContentAlignment="Center">
                    <ItemsControl ItemsSource="{Binding Notes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" 
                                            Margin="0,10">
                                    <ComboBox IsEditable="False"
                                              materialDesign:HintAssist.Hint="Loại note"
                                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                              ItemsSource="{Binding DataContext.NoteTypeOptions, RelativeSource={RelativeSource AncestorType=Window}}"
                                              ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                              DisplayMemberPath="DisplayName"
                                              SelectedValuePath="Value"
                                              SelectedValue="{Binding NoteType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Margin="0,0,0,10"/>

                                    <TextBox Height="Auto"
                                             Text="{Binding Content}"
                                             TextWrapping="Wrap"
                                             materialDesign:HintAssist.Hint="Mô tả"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             Margin="0,0,0,10"/>

                                    <Button Content="Xóa" 
                                            Foreground="Red"
                                            Command="{Binding DataContext.RemoveNoteCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource MaterialDesignFlatButton}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

        </StackPanel>

        <!-- Nút Hoàn thành -->
        <Button Grid.Row="1" 
                Width="218"
                Margin="0,0,0,10"
                Content="Done"
                Background="Cyan"
                Foreground="Black"
                BorderThickness="0"
                Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                materialDesign:ButtonAssist.CornerRadius="10"
                Command="{Binding SaveCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
    </Grid>
</Window>
