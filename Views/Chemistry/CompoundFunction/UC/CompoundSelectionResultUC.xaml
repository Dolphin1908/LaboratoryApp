<UserControl x:Class="LaboratoryApp.Views.Chemistry.CompoundFunction.UC.CompoundSelectionResultUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LaboratoryApp.Views.Chemistry.CompoundFunction.UC"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10,0,10,10">
        <ScrollViewer VerticalScrollBarVisibility="Hidden"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <!-- Formula, Name -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="{Binding Formula}"
                               Grid.Row="0"
                               FontSize="32" 
                               FontWeight="Bold"
                               Foreground="DarkSlateBlue" />
                    <TextBlock Text="{Binding Name}"
                               Grid.Row="1"
                               FontStyle="Italic"
                               Margin="0,0,0,10"/>
                </Grid>

                <!-- Thông tin chung -->
                <Grid Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Thông tin chung"
                               Grid.Row="0"
                               FontSize="24"
                               FontWeight="Bold"
                               Margin="0,0,0,10"
                               Foreground="DarkSlateBlue" />
                    <StackPanel Grid.Row="1"
                                Margin="10,0,0,0">
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,10">
                            <TextBlock Text="Khối lượng mol: "
                                       FontSize="16"
                                       FontWeight="Bold"/>
                            <TextBlock Text="{Binding MolecularMass}"
                                       FontSize="16"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="g/mol"
                                       FontSize="16"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,10">
                            <TextBlock Text="Khối lượng riêng: "
                                       FontSize="16"
                                       FontWeight="Bold"/>
                            <TextBlock Text="{Binding Density}"
                                       FontSize="16"
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="g/cm³"
                                       FontSize="16"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,10">
                            <TextBlock Text="Loại hợp chất: "
                                       FontSize="16"
                                       FontWeight="Bold"/>
                            <TextBlock Text="{Binding TypeDescription}"
                                       FontSize="16"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,10">
                            <TextBlock Text="Trạng thái: "
                                       FontSize="16"
                                       FontWeight="Bold"/>
                            <TextBlock Text="{Binding PhaseDescription}"
                                       FontSize="16"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- Tính chất Vật lí -->
                <Grid Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Tính chất Vật lí"
                               Grid.Row="0"
                               FontSize="24"
                               FontWeight="Bold"
                               Margin="0,0,0,10"
                               Foreground="DarkSlateBlue" />

                    <ItemsControl ItemsSource="{Binding PhysicalProperties}"
                                  Grid.Row="1">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="10,0,0,10">
                                    <TextBlock Text="{Binding PropertyName}"
                                               FontSize="16"
                                               FontWeight="DemiBold"/>
                                    <StackPanel Orientation="Horizontal"
                                                Visibility="{Binding Unit, Converter={StaticResource NullToVisibilityConverter}}">
                                        <TextBlock Text="{Binding Value}"
                                                   FontSize="16" 
                                                   Margin="10,0,5,0"/>
                                        <TextBlock Text="{Binding Unit}"
                                                   FontSize="16"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Description}"
                                               Visibility="{Binding Description, Converter={StaticResource NullToVisibilityConverter}}"
                                               TextWrapping="Wrap"
                                               FontSize="16"
                                               Margin="10,0,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>

                <!-- Tính chất Hóa học -->
                <Grid Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Tính chất Hóa học"
                               Grid.Row="0"
                               FontSize="24"
                               FontWeight="Bold"
                               Margin="0,0,0,10"
                               Foreground="DarkSlateBlue" />
                    
                    <ItemsControl ItemsSource="{Binding ChemicalProperties}"
                                  Grid.Row="1">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="10,0,0,10">
                                    <TextBlock Text="{Binding PropertyName}"
                                               FontSize="16"
                                               FontWeight="DemiBold"/>
                                    <TextBlock Text="{Binding Description}"
                                               Visibility="{Binding Description, Converter={StaticResource NullToVisibilityConverter}}"
                                               TextWrapping="Wrap" 
                                               FontSize="16"
                                               Margin="10,0,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
                
                <!-- Ghi chú -->
                <Grid Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Ghi chú"
                               Grid.Row="0"
                               FontSize="24"
                               FontWeight="Bold"
                               Margin="0,0,0,10"
                               Foreground="DarkSlateBlue" />

                    <ItemsControl ItemsSource="{Binding Notes}"
                                  Grid.Row="1">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="10,0,0,10">
                                    <TextBlock Text="{Binding NoteType, Converter={StaticResource EnumDisplayNameConverter}}"
                                               FontSize="16"
                                               FontWeight="DemiBold"/>
                                    <ItemsControl ItemsSource="{Binding Content}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}"
                                                           TextWrapping="Wrap"
                                                           FontSize="16"
                                                           Margin="10,0,0,0"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
