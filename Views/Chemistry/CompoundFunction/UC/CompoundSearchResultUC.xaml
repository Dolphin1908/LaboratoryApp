<UserControl x:Class="LaboratoryApp.Views.Chemistry.CompoundFunction.UC.CompoundSearchResultUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LaboratoryApp.Views.Chemistry.CompoundFunction.UC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid HorizontalAlignment="left">
        <StackPanel Orientation="Vertical"
                Margin="0, 5">
            <TextBlock Text="{Binding Formula}"
                   FontSize="16"
                   FontWeight="Bold"
                   Foreground="DarkSlateBlue"
                   HorizontalAlignment="Left"/>
            <TextBlock Text="{Binding Name}"
                   FontSize="12"/>
            <TextBlock Text="{Binding MolecularMass}"
                   FontSize="12"/>
        </StackPanel>
    </Grid>
</UserControl>
