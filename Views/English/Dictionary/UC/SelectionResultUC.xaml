<UserControl x:Class="LaboratoryApp.Views.English.Dictionary.UC.SelectionResultUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LaboratoryApp.Views.English.Dictionary.UC"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Hidden"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <!-- Headword and pronunciation -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="{Binding Word}" 
                               FontSize="20" 
                               FontWeight="Bold"/>

                    <Button Grid.Column="1"
                            Background="Transparent"
                            BorderThickness="0"
                            Width="20"
                            Height="20"
                            Padding="0"
                            Margin="20,0,0,0"
                            HorizontalAlignment="Left"
                            Command="{Binding DataContext.SpeechTextCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding Word}">
                        <materialDesign:PackIcon Kind="VolumeHigh"
                                                 Width="20"
                                                 Height="20"/>
                    </Button>
                </Grid>
                <TextBlock Text="{Binding Pronunciation}" 
                           FontStyle="Italic" 
                           Margin="0,0,0,10"/>

                <!-- POS list -->
                <ItemsControl ItemsSource="{Binding Pos}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,5,0,10">
                                <TextBlock Text="{Binding Pos}" 
                                           FontWeight="Bold" 
                                           Foreground="DarkSlateBlue" />

                                <!-- Definition list -->
                                <ItemsControl ItemsSource="{Binding Definitions}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="10,2,0,5">
                                                <TextBlock Text="{Binding Definition}" 
                                                           TextWrapping="Wrap" />

                                                <!-- Examples -->
                                                <ItemsControl ItemsSource="{Binding Examples}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                </Grid.RowDefinitions>
                                                                <Grid Grid.Row="0" 
                                                                      Margin="0,2,0,2">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="10"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <TextBlock Text="• " 
                                                                               FontWeight="Bold" 
                                                                               Foreground="Gray" 
                                                                               Grid.Column="0" 
                                                                               VerticalAlignment="Top"/>
                                                                    <TextBlock Text="{Binding Example}" 
                                                                               TextWrapping="Wrap" 
                                                                               Margin="5,0,0,0"
                                                                               Grid.Column="1"/>
                                                                </Grid>
                                                                <TextBlock Grid.Row="1"
                                                                           Text="{Binding Translation}" 
                                                                           TextWrapping="Wrap" 
                                                                           Margin="15,2,0,0"
                                                                           FontStyle="Italic" 
                                                                           Foreground="DarkGray"/>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
