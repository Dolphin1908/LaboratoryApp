<UserControl x:Class="LaboratoryApp.Views.English.FlashcardFunction.UC.FlashcardSetTagUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LaboratoryApp.Views.English.FlashcardFunction.UC"
             xmlns:ui="clr-namespace:LaboratoryApp.Views.English.FlashcardFunction.UI"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             mc:Ignorable="d" 
             Height="Auto" 
             Width="Auto">

    <Button Height="Auto"
            BorderThickness="0"
            Background="Transparent"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            Padding="0"
            Command="{Binding DataContext.OpenFlashcardSetCommand, RelativeSource={RelativeSource AncestorType=Page}}"
            CommandParameter="{Binding Id}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
                  Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <materialDesign:PackIcon Kind="Book"
                                         Width="40"
                                         Height="40"
                                         Margin="0,0,5,0"/>
                <Grid Grid.Column="1"
                      Margin="5,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               FontWeight="Bold"
                               Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                               FontSize="20"/>
                    <TextBlock Grid.Row="1"
                               FontWeight="Light"
                               FontStyle="Italic"
                               Text="{Binding Total, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
            </Grid>
            <Separator Grid.Row="1"
                       Width="200"
                       Height="1"
                       Background="Gray"
                       BorderBrush="Gray"
                       HorizontalAlignment="Center"/>
        </Grid>
    </Button>
</UserControl>
