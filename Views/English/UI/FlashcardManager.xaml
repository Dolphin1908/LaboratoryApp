<Page x:Class="LaboratoryApp.Views.English.UI.FlashcardManager"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaboratoryApp.Views.English.UI"
      xmlns:uc="clr-namespace:LaboratoryApp.Views.English.UC"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="13"
      TextOptions.TextFormattingMode="Ideal"
      TextOptions.TextRenderingMode="Auto"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Flashcard Manager">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Flashcard Manager -->
        <Grid Grid.Column="0"
              Margin="10">
            <StackPanel>
                <Border BorderThickness="1"
                        BorderBrush="Black"
                        CornerRadius="10"
                        Height="24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Kind="Magnify" 
                                                 Grid.Column="0"
                                                 Height="20"
                                                 Width="20"
                                                 Margin="5,0"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Center"/>
                        <TextBox Grid.Column="1"
                                 VerticalAlignment="Center"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Foreground="Black"
                                 CaretBrush="Black"
                                 Style="{x:Null}"
                                 BorderBrush="Transparent"
                                 Margin="0"/>
                    </Grid>
                </Border>

                <Button IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        ToolTip="Resource name: MaterialDesignRaisedButton"
                        BorderThickness="0"
                        Background="#76ff03"
                        Margin="0,5"
                        Height="32"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Command="{Binding AddFlashcardSetCommand}">
                    <Grid VerticalAlignment="Center"
                          HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="Add"
                                                 Grid.Column="0"
                                                 Width="20"
                                                 Height="20"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1"
                                   Text="Add Set"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Button>
                
                <Separator Width="200"
                           Height="1"
                           Background="Gray"
                           BorderBrush="Gray"
                           Margin="0,5"/>
                <!-- Flashcard List -->
                <ItemsControl ItemsSource="{Binding FlashcardSets, UpdateSourceTrigger=PropertyChanged}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <uc:FlashcardSetTagUC Margin="5"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
        
        <!-- Flashcard Details -->
        <Border Grid.Column="1"
                Padding="10"
                BorderThickness="1,0,0,0"
                BorderBrush="Black">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Row 1 -->
                <Border BorderThickness="0,0,0,1"
                        BorderBrush="Gray"
                        Margin="5,0,5,0"
                        Padding="0,0,0,5">
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="{Binding SelectedFlashcardSet.Name, UpdateSourceTrigger=PropertyChanged}"
                                   FontSize="68"
                                   FontWeight="Bold"/>

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0" 
                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        ToolTip="Resource name: MaterialDesignRaisedButton"
                                        Background="Cyan"
                                        BorderThickness="0"
                                        Width="200"
                                        Height="64"
                                        Padding="0,0,5,0"
                                        Margin="5,0,0,0"
                                        Visibility="{Binding SelectedFlashcardSet, Converter={StaticResource NullToVisibilityConverter}}"
                                        materialDesign:ButtonAssist.CornerRadius="10"
                                        Command="{Binding OpenUpdateFlashcardSetWindowCommand}">
                                    <Grid VerticalAlignment="Center"
                                          HorizontalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <materialDesign:PackIcon Grid.Column="0"
                                                                 Kind="Edit"
                                                                 Width="24"
                                                                 Height="24"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="Edit set"
                                                   Margin="5,0,0,0"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </Button>

                                <Button Grid.Column="1"                                        
                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        ToolTip="Resource name: MaterialDesignRaisedButton"
                                        Background="Red"
                                        BorderThickness="0"
                                        Width="200"
                                        Height="64"
                                        Padding="0,0,5,0"
                                        Margin="10,0,0,0"
                                        Visibility="{Binding SelectedFlashcardSet, Converter={StaticResource NullToVisibilityConverter}}"
                                        materialDesign:ButtonAssist.CornerRadius="10"
                                        Command="{Binding DeleteFlashcardSetCommand}"
                                        CommandParameter="{Binding SelectedFlashcardSet}">
                                    <Grid VerticalAlignment="Center"
                                          HorizontalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <materialDesign:PackIcon Grid.Column="0"
                                                                 Kind="Delete"
                                                                 Width="24"
                                                                 Height="24"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="Delete set"
                                                   Margin="5,0,0,0"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </Button>
                            </Grid>

                            <StackPanel Grid.Row="1"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        Margin="0,5,0,0">
                                <TextBlock Text="Last updated: "
                                           FontStyle="Italic"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding SelectedFlashcardSet.LastUpdatedDate, UpdateSourceTrigger=PropertyChanged}"
                                           FontStyle="Italic"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Row 2 -->
                <StackPanel Grid.Row="1"
                            Visibility="{Binding SelectedFlashcardSet, Converter={StaticResource NullToVisibilityConverter}}">
                    <Border Padding="0,10"
                            Margin="5,0"
                            BorderThickness="0,0,0,1"
                            BorderBrush="Gray">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Word"
                                       Grid.Column="0"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Margin="5,0"/>
                            <TextBlock Text="Meaning"
                                       Grid.Column="1"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Margin="5,0"/>
                        </Grid>
                    </Border>

                    <ScrollViewer Margin="5,0,0,0"
                                  ScrollViewer.VerticalScrollBarVisibility="Hidden">
                        <ItemsControl ItemsSource="{Binding SelectedFlashcardSet.Flashcards, UpdateSourceTrigger=PropertyChanged}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <uc:FlashcardTagUC Margin="0,0,0,5"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
                
                
                <!-- Row 3 -->
                <DockPanel Grid.Row="2"
                           Margin="5,10,5,0">
                    <Border BorderThickness="0,1,0,0"
                            BorderBrush="Gray"
                            Padding="0,10,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"                      
                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    ToolTip="Resource name: MaterialDesignRaisedButton"
                                    Background="#76ff03"
                                    BorderThickness="0"
                                    Width="250"
                                    Height="64"
                                    Padding="0,0,5,0"
                                    Visibility="{Binding SelectedFlashcardSet, Converter={StaticResource NullToVisibilityConverter}}"
                                    materialDesign:ButtonAssist.CornerRadius="10"
                                    Command="{Binding OpenAddFlashcardWindowCommand}">
                                <Grid VerticalAlignment="Center"
                                      HorizontalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Grid.Column="0"
                                                             Kind="Add"
                                                             Width="24"
                                                             Height="24"/>
                                    <TextBlock Grid.Column="1"
                                               Text="Add card"
                                               Margin="5,0,0,0"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Button>

                            <Button Grid.Column="1"  
                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    ToolTip="Resource name: MaterialDesignRaisedButton"
                                    Background="Cyan"
                                    BorderThickness="0"
                                    Width="250"
                                    Height="64"
                                    Padding="0,0,5,0"
                                    Visibility="{Binding SelectedFlashcardSet, Converter={StaticResource NullToVisibilityConverter}}"
                                    materialDesign:ButtonAssist.CornerRadius="10"
                                    Command="{Binding StartFlashcardSetCommand}"
                                    CommandParameter="{Binding}">
                                <Grid VerticalAlignment="Center"
                                      HorizontalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Grid.Column="0"
                                                             Kind="Play"
                                                             Width="24"
                                                             Height="24"/>
                                    <TextBlock Grid.Column="1"
                                               Text="Start set"
                                               Margin="5,0,0,0"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Button>
                        </Grid>
                    </Border>
                </DockPanel>
            </Grid>
        </Border>
        
    </Grid>
</Page>
