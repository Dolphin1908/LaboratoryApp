<Window x:Class="LaboratoryApp.Views.English.SubWin.AddFlashcardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaboratoryApp.Views.English.SubWin"
        xmlns:domain="clr-namespace:LaboratoryApp.Support.Domain"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Height="445" 
        Width="400"
        Title="Add New Flashcard">
    
    <StackPanel Margin="10">
        <TextBox VerticalAlignment="Top"
                 materialDesign:HintAssist.Hint="Word"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 Margin="0,0,0,20">
            <TextBox.Text>
                <Binding Path="Word"
                         UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <domain:NotEmptyValidationRule ValidatesOnTargetUpdated="True"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>

        <TextBox VerticalAlignment="Top"
                 materialDesign:HintAssist.Hint="Type of word"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 Margin="0,0,0,20"
                 Text="{Binding Pos, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBox VerticalAlignment="Top"
                 materialDesign:HintAssist.Hint="Meaning"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 Margin="0,0,0,20">
            <TextBox.Text>
                <Binding Path="Meaning"
                         UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <domain:NotEmptyValidationRule ValidatesOnTargetUpdated="True"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>

        <TextBox VerticalAlignment="Top"
                 materialDesign:HintAssist.Hint="Example"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 Margin="0,0,0,20"
                 Text="{Binding Example, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBox VerticalAlignment="Top"
                 materialDesign:HintAssist.Hint="Note"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 Margin="0,0,0,20"
                 Text="{Binding Note, UpdateSourceTrigger=PropertyChanged}"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0"
                    Width="150"
                    Content="Done"
                    Background="#76ff03"
                    Foreground="Black"
                    BorderThickness="0"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                    Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                    ToolTip="Resource name: MaterialDesignRaisedSecondaryButton"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    Command="{Binding UpdateFlashcardCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>

            <Button Grid.Column="1"
                    Width="150"
                    Background="Cyan"
                    Foreground="Black"
                    BorderThickness="0"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                    Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                    ToolTip="Resource name: MaterialDesignRaisedSecondaryButton"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    Command="{Binding OpenDictionaryWindowCommand}">
                <Grid HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon Kind="Magnify" 
                                             Grid.Column="0"
                                             Height="20"
                                             Width="20"
                                             VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1"
                               VerticalAlignment="Center"
                               Margin="5,0"
                               Text="Dictionary"/>
                </Grid>
            </Button>
        </Grid>
        
    </StackPanel>
</Window>
