<Page x:Class="LaboratoryApp.Views.English.EnglishMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaboratoryApp.Views.English"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="13"
      TextOptions.TextFormattingMode="Ideal"
      TextOptions.TextRenderingMode="Auto"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EnglishMainWindow">

    <Grid Margin="100, 0"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Center">
        <StackPanel VerticalAlignment="Stretch">
            <Image Source="../../Resources/Laboratory.png"
                   Width="64"
                   Height="64"
                   Margin="0,0,0,20"/>
            <TextBlock Text="Welcome to English Course"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="8" 
                       HorizontalAlignment="Center"/>
            <Grid Margin="20"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" 
                      Grid.Column="0"
                      Margin="0, 0, 10, 10"
                      VerticalAlignment="Stretch">
                    <Button Height="100"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="SpringGreen"
                            BorderBrush="SpringGreen"
                            Command="{Binding OpenDictionaryCommand}">
                        <TextBlock Text="Từ điển Anh - Việt" />
                    </Button>
                </Grid>
                <Grid Grid.Row="0"
                      Grid.Column="1"
                      Margin="10, 0, 0, 10"
                      VerticalAlignment="Stretch">
                    <Button Height="100"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#ffff72"
                            BorderBrush="#ffff72"
                            Command="{Binding NavigateToFlashcardManagerCommand}">
                        <TextBlock Text="Flashcard"/>
                    </Button>
                </Grid>
                <Grid Grid.Row="1"
                      Grid.Column="0"
                      Margin="0, 10, 10, 10"
                      VerticalAlignment="Stretch">
                    <Button Height="100"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#ff9e40"
                            BorderBrush="#ff9e40"
                            Command="{Binding NavigateToLectureCommand}">
                        <TextBlock Text="Bài giảng" />
                    </Button>
                </Grid>
                <Grid Grid.Row="1"
                      Grid.Column="1"
                      Margin="10, 10, 0, 10"
                      VerticalAlignment="Stretch">
                    <Button Height="100"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            IsEnabled="False"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#ff96c8"
                            BorderBrush="#ff96c8">
                        <TextBlock Text="Luyện nghe" />
                    </Button>
                </Grid>
                <Grid Grid.Row="2"
                      Grid.Column="0"
                      Margin="0, 10, 10, 0"
                      VerticalAlignment="Stretch">
                    <Button Height="100"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            IsEnabled="False"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#d872e8"
                            BorderBrush="#d872e8">
                        <TextBlock Text="Bài tập" />
                    </Button>
                </Grid>
                <Grid Grid.Row="2"
                      Grid.Column="1"
                      Margin="10, 10, 0, 0"
                      VerticalAlignment="Stretch">
                    <Button Height="100"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            IsEnabled="False"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#42a5f5"
                            BorderBrush="#42a5f5">
                        <TextBlock Text="Kiểm tra" />
                    </Button>
                </Grid>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
