<UserControl x:Class="LaboratoryApp.Views.UC.NavigationUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LaboratoryApp.Views.UC"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             mc:Ignorable="d">
    <Grid Width="150">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <RadioButton Margin="4"
                         Padding="0, 10"
                         Content="Dashboard"
                         IsChecked="True"
                         Command="{Binding NavigateToDashboardCommand}"
                         Style="{StaticResource MaterialDesignTabRadioButtonRight}" />
            <RadioButton Margin="4"
                         Padding="0, 10"
                         Content="Bảng tuần hoàn"
                         IsChecked="False"
                         Command="{Binding NavigateToPeriodicTableCommand}"
                         Style="{StaticResource MaterialDesignTabRadioButtonRight}" />
            <RadioButton Margin="4"
                         Padding="0, 10"
                         Content="Bộ công cụ"
                         IsChecked="False"
                         Command="{Binding NavigateToToolkitCommand}"
                         Style="{StaticResource MaterialDesignTabRadioButtonRight}" />
        </StackPanel>

        <Button Grid.Row="1"
                Margin="4"
                Content="Logout"
                BorderThickness="0"
                Background="Red"
                materialDesign:ButtonAssist.CornerRadius="10"
                Visibility="Collapsed"
                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                Style="{StaticResource MaterialDesignRaisedDarkButton}"
                ToolTip="Resource name: MaterialDesignRaisedLightDarkButton"/>
        
        <Button Grid.Row="1"
                Margin="4"
                Content="Login"
                BorderThickness="0"
                Background="SpringGreen"
                Foreground="Black"
                materialDesign:ButtonAssist.CornerRadius="10"
                Visibility="Visible"
                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                Style="{StaticResource MaterialDesignRaisedDarkButton}"
                ToolTip="Resource name: MaterialDesignRaisedLightDarkButton"
                Command="{Binding OpenAuthenticationCommand}"/>
    </Grid>
</UserControl>
