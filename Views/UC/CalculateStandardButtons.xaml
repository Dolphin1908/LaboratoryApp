<UserControl x:Class="LaboratoryApp.Views.UC.CalculateStandardButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LaboratoryApp.Views.UC"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             DataContext="{StaticResource CalculatorVM}"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    Margin="2">
            <Button Height="50"
                    Width="75"
                    Background="#F1F1F1"
                    BorderThickness="0"
                    Content="%"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding PercentCommand}"/>
            <Button Height="50"
                    Width="75"
                    Background="#F1F1F1"
                    BorderThickness="0"
                    Margin="6,0,3,0"
                    Content="CE"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding ClearNumberCommand}"/>
            <Button Height="50"
                    Width="75"
                    Background="#F1F1F1"
                    BorderThickness="0"
                    Margin="3,0,6,0"
                    Content="C"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding ClearFormulaCommand}"/>
            <Button Height="50"
                    Width="75"
                    Background="#F1F1F1"
                    BorderThickness="0"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding BackspaceCommand}">
                <materialDesign:PackIcon Kind="BackspaceOutline"/>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Margin="2">
            <Button Height="50"
                    Width="75"
                    Background="#F1F1F1"
                    BorderThickness="0"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding OneDivideXCommand}">
                <materialDesign:PackIcon Kind="FractionOneHalf"/>
            </Button>
            <Button Height="50"
                    Width="75"
                    Background="#F1F1F1"
                    BorderThickness="0"
                    Margin="6,0,3,0"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding SquareCommand}">
                <Image Source="/Resources/Icons/squared.png" Width="12" Height="12"/>
            </Button>
            <Button Height="50"
                    Width="75"
                    Background="#F1F1F1"
                    BorderThickness="0"
                    Margin="3,0,6,0"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding SquareRootCommand}">
                <materialDesign:PackIcon Kind="SquareRoot" Width="20" Height="20"/>
            </Button>
            <Button Height="50"
                    Width="75"
                    Background="#F1F1F1"
                    BorderThickness="0"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding AddOperatorCommand}"
                    CommandParameter="/">
                <Image Source="/Resources/Icons/divide.png" Width="20" Height="20"/>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    Margin="2">
            <Button Height="50"
                    Width="75"
                    Background="#DDDDDD"
                    BorderThickness="0"
                    Content="7"
                    FontWeight="Bold"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding AddNumberCommand}"
                    CommandParameter="7"/>
            <Button Height="50"
                    Width="75"
                    Background="#DDDDDD"
                    BorderThickness="0"
                    Margin="6,0,3,0"
                    Content="8"
                    FontWeight="Bold"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding AddNumberCommand}"
                    CommandParameter="8"/>
            <Button Height="50"
                    Width="75"
                    Background="#DDDDDD"
                    BorderThickness="0"
                    Margin="3,0,6,0"
                    Content="9"
                    FontWeight="Bold"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding AddNumberCommand}"
                    CommandParameter="9"/>
            <Button Height="50"
                    Width="75"
                    Background="#F1F1F1"
                    BorderThickness="0"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding AddOperatorCommand}"
                    CommandParameter="*">
                <materialDesign:PackIcon Kind="Close"/>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    Margin="2">
            <Button Height="50"
                    Width="75"
                    Background="#DDDDDD"
                    BorderThickness="0"
                    Content="4"
                    FontWeight="Bold"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding AddNumberCommand}"
                    CommandParameter="4"/>
            <Button Height="50"
                    Width="75"
                    Background="#DDDDDD"
                    BorderThickness="0"
                    Margin="6,0,3,0"
                    Content="5"
                    FontWeight="Bold"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding AddNumberCommand}"
                    CommandParameter="5"/>
            <Button Height="50"
                    Width="75"
                    Background="#DDDDDD"
                    BorderThickness="0"
                    Margin="3,0,6,0"
                    Content="6"
                    FontWeight="Bold"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding AddNumberCommand}"
                    CommandParameter="6"/>
            <Button Height="50"
                    Width="75"
                    Background="#F1F1F1"
                    BorderThickness="0"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding AddOperatorCommand}"
                    CommandParameter="-">
                <materialDesign:PackIcon Kind="Minus"/>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    Margin="2">
            <Button Height="50"
                    Width="75"
                    Background="#DDDDDD"
                    BorderThickness="0"
                    Content="1"
                    FontWeight="Bold"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding AddNumberCommand}"
                    CommandParameter="1"/>
            <Button Height="50"
                    Width="75"
                    Background="#DDDDDD"
                    BorderThickness="0"
                    Margin="6,0,3,0"
                    Content="2"
                    FontWeight="Bold"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding AddNumberCommand}"
                    CommandParameter="2"/>
            <Button Height="50"
                    Width="75"
                    Background="#DDDDDD"
                    BorderThickness="0"
                    Margin="3,0,6,0"
                    Content="3"
                    FontWeight="Bold"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding AddNumberCommand}"
                    CommandParameter="3"/>
            <Button Height="50"
                    Width="75"
                    Background="#F1F1F1"
                    BorderThickness="0"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding AddOperatorCommand}"
                    CommandParameter="+">
                <materialDesign:PackIcon Kind="Plus"/>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    Margin="2">
            <Button Height="50"
                    Width="75"
                    Background="#DDDDDD"
                    BorderThickness="0"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding ChangeSignCommand}">
                <materialDesign:PackIcon Kind="PlusMinusVariant"/>
            </Button>
            <Button Height="50"
                    Width="75"
                    Background="#DDDDDD"
                    BorderThickness="0"
                    Margin="6,0,3,0"
                    Content="0"
                    FontWeight="Bold"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding AddNumberCommand}"
                    CommandParameter="0"/>
            <Button Height="50"
                    Width="75"
                    Background="#DDDDDD"
                    BorderThickness="0"
                    Margin="3,0,6,0"
                    Content="."
                    FontWeight="Bold"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding AddNumberCommand}"
                    CommandParameter="."/>
            <Button Height="50"
                    Width="75"
                    Background="#2AF7FF"
                    BorderThickness="0"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding CalculateCommand}">
                <materialDesign:PackIcon Kind="Equal"/>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
